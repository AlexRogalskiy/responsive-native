{
  "name": "responsive-native",
  "version": "1.0.0-beta.0",
  "author": "Diego Fernandes <diego.schell.f@gmail.com> (https://github.com/diego3g)",
  "description": "A responsive utility toolkit for React Native",
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": "https://github.com/diego3g/responsive-native",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/diego3g/responsive-native/issues"
  },
  "homepage": "https://github.com/diego3g/responsive-native#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/index.d.ts",
  "react-native": "lib/commonjs/index",
  "source": "src/index",
  "scripts": {
    "test": "jest",
    "typescript": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "prepare": "bob build",
    "release": "release-it",
    "example": "yarn --cwd example",
    "pods": "cd example && pod-install --quiet",
    "bootstrap": "yarn example && yarn && yarn pods"
  },
  "dependencies": {
    "scheduler": "0.20.2",
    "use-context-selector": "1.3.7"
  },
  "devDependencies": {
    "@react-native-community/eslint-config": "3.0.0",
    "@testing-library/react-hooks": "7.0.0",
    "@types/jest": "26.0.23",
    "@types/react": "17.0.11",
    "@types/react-native": "0.64.10",
    "@types/styled-components": "5.1.10",
    "eslint": "7.29.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "3.4.0",
    "jest": "27.0.4",
    "np": "^7.5.0",
    "pod-install": "0.1.23",
    "prettier": "2.3.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-native": "0.64.2",
    "react-native-builder-bob": "0.18.0",
    "react-native-safe-area-context": "3.2.0",
    "react-test-renderer": "17.0.2",
    "release-it": "14.9.0",
    "ts-jest": "27.0.3",
    "typescript": "4.3.4"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*",
    "react-native-safe-area-context": "*"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/",
      "<rootDir>/src/__tests__/__mocks__/"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/src/**/*.{ts,tsx}",
      "!**/node_modules/**",
      "!**/lib/**",
      "!**/example/**"
    ]
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@react-native-community",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  }
}
